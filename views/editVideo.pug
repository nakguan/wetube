extends layouts/main

block content
    .form-container
    form(action=routes.editVideo(video.id), method="post")
        input(type="text", name="title", placeholder="Title", value=video.title)
        textarea(name="description", placeholder="Description", value=video.description)=video.description
        input(type="submit" value="Update Video")
    a.form-container(href=routes.deleteVideo(video.id))|Delete Video